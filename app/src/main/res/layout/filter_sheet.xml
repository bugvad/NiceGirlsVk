<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="17dp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_bottom_sheet_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:gravity="center"
            android:text="Фильтры поиска"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Возраст"
            android:textSize="16sp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"/>

        <com.appyvet.materialrangebar.RangeBar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:mrb_pinTextColor="@color/colorPrimaryDark"
            app:mrb_barWeight="2dp"
            app:mrb_connectingLineWeight="4dp"
            app:mrb_leftSelectorColor="#FFFFFF"
            app:mrb_pinColor="#FFFFFF"
            app:mrb_pinMaxFont="15sp"
            app:mrb_pinMinFont="15sp"
            app:mrb_pinRadius="14dp"
            app:mrb_rangeBar="true"
            app:mrb_rangeBarPaddingBottom="20dp"
            app:mrb_rangeBar_rounded="true"
            app:mrb_rightSelectorColor="#FFFFFF"
            app:mrb_selectorBoundarySize="0dp"
            app:mrb_selectorSize="10dp"
            app:mrb_temporaryPins="true"
            app:mrb_tickDefaultLabel="label"
            app:mrb_tickEnd="45"
            app:mrb_tickHeight="0dp"
            app:mrb_tickInterval="1"
            app:mrb_tickLabelSize="4sp"
            app:mrb_tickStart="18"
            app:mrb_rangeBarColor="#AAABBB"
            app:mrb_connectingLineColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:text="Показать результаты"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

    </LinearLayout>






</LinearLayout>